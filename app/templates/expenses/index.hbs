{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    <h2>All Expenses</h2>
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

<div class='flex page page--dark layout-column'>
  {{#each sortedExpenses as |expense|}}
    {{#link-to 'expenses.expense' expense.id}}
      {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}
              {{expense.name}}
            {{/text.headline}}

            {{#text.subhead}}
              Due {{moment-format selectedMonth 'M'}}/{{expense.dueDay}}/{{moment-format selectedMonth 'YY'}}
            {{/text.subhead}}
          {{/title.text}}
        {{/card.title}}

        {{#card.content}}
          <p class='expense-remaining'>{{to-dollars expense.remainingDue}} remaining</p>

          <div class='layout-row layout-align-start-center expense-percentage'>
            {{paper-progress-linear class='expense-percentage-graph' value=expense.percentagePaid}}
            <span class='expense-percentage-text'>{{expense.percentagePaid}}%</span>
          </div>
        {{/card.content}}
      {{/paper-card}}
    {{/link-to}}
  {{/each}}
</div>